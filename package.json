{
  "name": "medicamenta.me-back-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Medicamenta.me - Centralized Backend",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "eslint --ext .ts src --ignore-pattern \"**/__tests__/**\" --ignore-pattern \"**/*.test.ts\"",
    "lint:fix": "eslint --ext .ts src --ignore-pattern \"**/__tests__/**\" --ignore-pattern \"**/*.test.ts\" --fix",
    "lint:all": "eslint --ext .js,.ts .",
    "emulators:start": "firebase emulators:start --only firestore",
    "emulators:clear": "firebase emulators:clear firestore",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=\"routes.test|webhook|stripe|pagseguro\"",
    "test:integration": "jest --testPathPatterns=\"routes.test|webhook\"",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:with-emulator": "start \"Firebase Emulators\" cmd /c \"firebase emulators:start --only firestore\" && timeout /t 5 && npm test"
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "@google-cloud/vision": "^5.3.4",
    "axios": "^1.6.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "stripe": "^14.12.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "xml2js": "^0.6.2",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/nock": "^10.0.3",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.32.0",
    "firebase-functions-test": "^3.4.1",
    "jest": "^30.2.0",
    "nock": "^14.0.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "typescript": "~5.6.0"
  },
  "private": true
}
