# üîê Environment Variables Template
# Copy this file to .env.local for local development

# ==========================================
# FIREBASE CONFIGURATION
# ==========================================
FIREBASE_PROJECT_ID=medicamenta-me
FIREBASE_REGION=us-central1

# ==========================================
# STRIPE CONFIGURATION
# ==========================================
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Product Price IDs
# Create these in Stripe Dashboard: https://dashboard.stripe.com/products
STRIPE_PREMIUM_MONTHLY=price_premium_monthly_brl
STRIPE_PREMIUM_YEARLY=price_premium_yearly_brl
STRIPE_FAMILY_MONTHLY=price_family_monthly_brl
STRIPE_FAMILY_YEARLY=price_family_yearly_brl

# Stripe Webhook Secret
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ==========================================
# PAGSEGURO CONFIGURATION
# ==========================================
# Get your credentials from: https://pagseguro.uol.com.br/
PAGSEGURO_EMAIL=your-email@example.com
PAGSEGURO_TOKEN=your_pagseguro_token_here

# PagSeguro Environment (sandbox or production)
PAGSEGURO_ENV=sandbox

# PagSeguro Plan IDs
PAGSEGURO_PREMIUM_MONTHLY_PLAN_ID=plan_id_here
PAGSEGURO_PREMIUM_YEARLY_PLAN_ID=plan_id_here
PAGSEGURO_FAMILY_MONTHLY_PLAN_ID=plan_id_here
PAGSEGURO_FAMILY_YEARLY_PLAN_ID=plan_id_here

# ==========================================
# GOOGLE CLOUD VISION API
# ==========================================
# Credentials are automatically loaded from Firebase
# Ensure Cloud Vision API is enabled in Google Cloud Console
# https://console.cloud.google.com/apis/library/vision.googleapis.com

GOOGLE_CLOUD_PROJECT=medicamenta-me

# ==========================================
# API CONFIGURATION
# ==========================================
# API Keys for partner integrations
# Generate secure keys using: openssl rand -base64 32

# Example API Keys (replace with actual keys in production)
API_KEY_PHARMACY_PARTNER_1=api_key_pharmacy_1_here
API_KEY_PHARMACY_PARTNER_2=api_key_pharmacy_2_here

# JWT Secret for API authentication
JWT_SECRET=your_very_secure_jwt_secret_here_min_32_chars

# JWT Expiration (in seconds)
JWT_EXPIRATION=86400

# ==========================================
# RATE LIMITING
# ==========================================
# Requests per minute per API key
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ==========================================
# CORS CONFIGURATION
# ==========================================
# Allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:8100,http://localhost:4200,http://localhost:4201,https://www.medicamenta.me,https://backoffice.medicamenta.me

# ==========================================
# EMAIL CONFIGURATION (Optional)
# ==========================================
# For sending notifications, receipts, etc.
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@medicamenta.me
EMAIL_SUPPORT=support@medicamenta.me

# ==========================================
# LOGGING & MONITORING
# ==========================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id

# ==========================================
# FEATURE FLAGS (Optional)
# ==========================================
FEATURE_OCR_ENABLED=true
FEATURE_WEARABLES_ENABLED=true
FEATURE_GAMIFICATION_ENABLED=true
FEATURE_MARKETPLACE_ENABLED=false

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================
# Set to true for local development
DEV_MODE=true

# Firebase Emulator URLs (for local development)
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# ==========================================
# NOTES
# ==========================================
# 1. Never commit .env.local to git
# 2. Keep .env.example updated with all required variables
# 3. Use Firebase Functions Config for production: 
#    firebase functions:config:set stripe.secret_key="sk_live_..."
# 4. Rotate API keys and secrets regularly
# 5. Use different keys for development and production
